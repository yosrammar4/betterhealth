{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title mb-4">Details de produit</h3>

            <div class="form-group mb-4">
                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Entrez le nom du produit'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.nom) }}
                </div>
            </div>

            <div class="form-group mb-4">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Entrez la description du produit'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="form-group mb-4">
                {{ form_label(form.quantite, 'Quantité', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.quantite, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Entrez la quantité disponible'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.quantite) }}
                </div>
            </div>

            <div class="form-group mb-4">
                {{ form_label(form.Categorie, 'Catégorie', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.Categorie, {'attr': {'class': 'form-control form-control-lg'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.Categorie) }}
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-primary btn-lg">
                    {{ button_label|default('Enregistrer') }}
                </button>
            </div>
        </div>
    </div>
{{ form_end(form) }}